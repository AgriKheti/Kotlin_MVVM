<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_marginStart="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_height="wrap_content">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_account"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dp_10"
        android:textSize="18sp"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:text="Name"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/dp_10"
            android:id="@+id/name_tv"
            android:layout_height="wrap_content"
            android:hint="MynameXYZ"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:text="User ID"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/dp_10"
            android:id="@+id/userid_tv"
            android:layout_height="wrap_content"
            android:hint="10002"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:padding="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Registered Mobile No."/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/dp_10"
            android:id="@+id/mobile_tv"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:hint="9998883330"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:text="Designation"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/dp_10"
            android:id="@+id/designation_tv"
            android:layout_height="wrap_content"
            android:hint="Supervisor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:text="District Code"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/dp_10"
            android:id="@+id/district_code_tv"
            android:layout_height="wrap_content"
            android:hint="01"/>
    </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_40"
        android:id="@+id/ok_btn"
        android:text="@string/ok"/>



</LinearLayout>